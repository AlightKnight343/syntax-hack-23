</head>
<body>
    <nav>
        <label class="logo">NAME</label>
        <ul class="links">
            <li><a href="/" class="link active">Home</a></li>
            <li><a href="#" class="link">About</a></li>
            <li><a href="/locker/deposit" class="link">Deposit</a></li>
        </ul>
        <ul class="loginUl">
            <li><a href="/auth/login" class="link">Login</a></li>
        </ul>

    </nav>

    <div class="container">
        <div class="landing">
            <div class="ball1"></div>
            <div class="ball2"></div>
            <h1><span class="special-text">Lorem ipsum dolor, sit</span> amet consectetur <span class="special-text">adipisicing</span>.</h1>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ball1 = document.querySelector('.ball1');
            const ball2 = document.querySelector('.ball2');
            
            const maxDistance =50;
            
            document.addEventListener('mousemove', function(event) {
                const distanceX = event.clientX - window.innerWidth / 2;
                const distanceY = event.clientY - window.innerHeight / 2;
                const percentageX = (distanceX / window.innerWidth) * 100;
                const percentageY = (distanceY / window.innerHeight) * 100;                
                const moveX = (percentageX / 100) * maxDistance;
                const moveY = (percentageY / 100) * maxDistance;                
                ball1.style.transform = `translate(${moveX}px, ${moveY}px)`;
                ball2.style.transform = `translate(${moveX}px, ${moveY}px)`;
            });
        });
    </script>
</body>

</html>